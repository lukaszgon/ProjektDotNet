<Window x:Class="ProjectApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectApp"
        mc:Ignorable="d"
        Title="Brand New Car" Height="450" Width="725" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="#FF6609D6"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Frame x:Name="Main" Margin="0,65,0,0" NavigationUIVisibility="Hidden"/>
        <Image x:Name="logo_png" Margin="10,5,506.4,360" Source="logo.png" Stretch="Fill"/>
        <Button x:Name="button" Content="Shopping Cart" HorizontalAlignment="Left" Margin="576,32,0,0" VerticalAlignment="Top" Width="110" BorderBrush="#FFFFFDFD" Background="#FFC2D300" Foreground="#FF0848FC" FontFamily="Segoe Print" Click="button_Click"/>
    </Grid>
</Window>
